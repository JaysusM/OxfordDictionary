html
  head
    title= title
  body
    div(name='searcher')
      form(action='/', method='POST')
        input(type='text', name='searchBar', placeholder='Word')
        input(type='submit' name='searchButton' value='Search')
    div(name='definition')
      h1(name='word')= word
      each item in definitions
        h4(class='definition')= "- " + item
